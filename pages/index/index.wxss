.top {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 100px;
}

.logo {
    width: 140rpx;
    height: 70rpx;
    margin: 0rpx;
    border-radius: 50%;
}

.title {
    color: #999;
    font-size: 14px;
    letter-spacing: 1px;
    font-weight: bold;
    margin-top: 15px;
}

.body {
    display: flex;
    margin-top: 50px;
    flex-direction: column;
    align-items: center;
}

.username {
    height: 40px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.username, .password {
    background: white;
    width: 60%;
    color: black;
    font-size: 15px;
    padding-left: 5px;
}

.password {
    margin-top: 15px;
    height: 40px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 50px;
}

.denglu {
    width: 60%;
    height: 40px;
    line-height: 40px;
    font-weight: bold;
    letter-spacing: 5px;
}

.button-sp-area {
    margin: 0 auto;
    padding-top: 15px;
    width: 60%;
}

.mini-btn {
    margin-right: 5px;
}

.footer, .weui-footer__text {
    font-size: 14px;
    color: black;
}
